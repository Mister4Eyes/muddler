{
  "compilerOptions": {
    "target": "es6",                    
    "module": "amd",
    "outDir": "dist",
    "moduleResolution": "node",         
    "lib": ["es7", "dom"],              
    "declaration": false,               
    "sourceMap": false,                 
    "removeComments": true,             
    "isolatedModules": false,           
    "strict": false,                    
    "noImplicitAny": false,             
    "typeRoots": [
      "./node_modules/@types"
    ],                                  
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}