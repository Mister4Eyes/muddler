{
  "compilerOptions": {
    "target": "es6",                    
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",         
    "lib": ["es7", "dom"],              
    "declaration": false,               
    "sourceMap": false,                 
	"removeComments": true,
	"inlineSourceMap": true,             
    "isolatedModules": false,           
    "strict": true,                    
    "noImplicitAny": true,             
    "typeRoots": [
      "./node_modules/@types"
    ],                                  
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}